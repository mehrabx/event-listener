{
  "name": "mehrabx/event-listener",
  "description": "Event manager library for php",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "mehrabx"
  ],
  "homepage": "https://github.com/mehrabx/event-listener",
  "authors": [
    {
      "name": "mehrabx",
      "email": "developer.mehr@gmail.com",
      "homepage": "https://github.com/mehrabx",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Mehrabx\\eventListenr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mehrabx\\eventListenr\\Tests\\": "tests"
    },
    "scripts": {
      "test": "phpunit",
      "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
      "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
  },
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "mockery/mockery": "dev-master",
    "phpunit/phpunit": "^9.5"
  }
}
